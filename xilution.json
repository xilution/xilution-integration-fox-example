{
  "runtime": "nodejs12.x",
  "handler": "index.handler",
  "api": {
    "endpoints": [
      {
        "id": "hello-world",
        "method": "get",
        "path": "/"
      }
    ]
  },
  "verify": {
    "commands": ["make verify"]
  },
  "build": {
    "commands": ["make build"],
    "buildDir": "./built"
  },
  "layer": {
    "commands": ["make install"],
    "layerDir": "./node_modules"
  },
  "tests": {
    "qual": [
      {
        "name": "End to End Tests",
        "commands": ["make test-e2e"]
      }
    ],
    "prod": [
      {
        "name": "Smoke Tests",
        "commands": ["make test-smoke"]
      }
    ]
  }
}
