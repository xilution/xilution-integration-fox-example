{
  "runtime": "nodejs12.x",
  "api": {
    "endpoints": [
      {
        "id": "hello",
        "method": "get",
        "path": "/hello",
        "function": {
          "handler": "app.hello"
        }
      },
      {
        "id": "world",
        "method": "get",
        "path": "/world",
        "function": {
          "handler": "app.world"
        }
      }
    ]
  },
  "verify": {
    "commands": [
      "make verify"
    ]
  },
  "build": {
    "commands": [
      "make build"
    ],
    "buildDir": "./build"
  },
  "layer": {
    "commands": [
      "make install"
    ],
    "layerDir": "./node_modules"
  },
  "tests": {
    "Test": [
      {
        "name": "End to End Tests",
        "commands": [
          "make test-e2e"
        ]
      }
    ],
    "Prod": [
      {
        "name": "Smoke Tests",
        "commands": [
          "make test-smoke"
        ]
      }
    ]
  }
}
